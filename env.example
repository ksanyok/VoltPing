# VoltPing Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PROJECT SETTINGS
# =============================================================================

# Project name (displayed in bot and admin panel)
PROJECT_NAME="VoltPing"

# Admin panel password
ADMIN_PASSWORD="change_this_password"

# =============================================================================
# TELEGRAM BOT
# =============================================================================

# Telegram Bot Token (from @BotFather)
TELEGRAM_TOKEN="123456789:ABCdefGHIjklMNOpqrsTUVwxyz"

# Optional: Chat ID for main notifications
# MAIN_CHAT_ID="-1001234567890"

# =============================================================================
# TUYA DEVICE
# =============================================================================

# Tuya Device ID (from Tuya IoT Platform)
TUYA_DEVICE_ID="your_device_id"

# Tuya Cloud API credentials (for cloud mode)
TUYA_ACCESS_ID="your_access_id"
TUYA_ACCESS_SECRET="your_access_secret"

# Tuya API region: eu, us, cn, in
TUYA_REGION="eu"

# =============================================================================
# CONNECTION MODE
# =============================================================================

# Connection mode: cloud, local, hybrid
# - cloud: Use Tuya Cloud API (limit 30k requests/month)
# - local: Direct connection to device (no limits, but requires LAN access)
# - hybrid: Try local first, fallback to cloud
TUYA_MODE="cloud"

# Local connection settings (required for local/hybrid mode)
# TUYA_LOCAL_IP="192.168.1.100"
# TUYA_LOCAL_KEY=""
# TUYA_LOCAL_VERSION="3.5"
# TUYA_LOCAL_PORT="6668"

# Public IP for remote local access (optional)
# TUYA_PUBLIC_IP=""

# =============================================================================
# MONITORING INTERVALS
# =============================================================================

# How often to poll device (in seconds)
POLL_INTERVAL="60"

# Voltage threshold for power detection (V)
# Below this value = no power
VOLTAGE_THRESHOLD="180"

# Minimum voltage change to trigger notification (V)
VOLTAGE_CHANGE_THRESHOLD="10"

# =============================================================================
# SCHEDULE MONITORING (Optional)
# =============================================================================

# Telegram channel/chat ID with outage schedules
# SCHEDULE_CHANNEL_ID="-1001234567890"

# Your queue number (1-6)
# SCHEDULE_QUEUE="1"

# Minutes before scheduled outage to send warning
# SCHEDULE_WARNING_MINUTES="30"

# =============================================================================
# DATABASE
# =============================================================================

# Path to SQLite database
DB_PATH="data/voltping.sqlite"

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Log level: debug, info, warning, error
# LOG_LEVEL="info"

# Timezone
# TZ="Europe/Kyiv"

# Keep events history for N days (0 = forever)
# EVENTS_RETENTION_DAYS="90"

# Max retries for API calls
# MAX_RETRIES="3"

# Request timeout (seconds)
# REQUEST_TIMEOUT="10"
